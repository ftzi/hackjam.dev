{
  "name": "hackjam.dev",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "tsw": "tsc --noEmit --watch --preserveWatchOutput",
    "dev": "bun i && concurrently -c grey,blue,green -n db,tsw,next, \"bun db:studio\" \"bun tsw --preserveWatchOutput\" \"next dev --turbopack\"",
    "build": "next build && bun run db:migrate",
    "start": "next start",
    "lint": "next lint",
    "format:check": "biome check . && eslint .",
    "format": "biome check --write . && eslint --fix .",
    "db:generate:auth": "bunx @better-auth/cli generate --output src/server/db/schema/auth.ts -y",
    "db:studio": "bunx drizzle-kit studio",
    "db:generate": "bun db:generate:auth && drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "env": "bunx vercel env pull .env"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@radix-ui/react-alert-dialog": "^1.1.7",
    "@radix-ui/react-checkbox": "^1.1.5",
    "@radix-ui/react-dialog": "^1.1.7",
    "@radix-ui/react-dropdown-menu": "^2.1.7",
    "@radix-ui/react-label": "^2.1.3",
    "@radix-ui/react-navigation-menu": "^1.2.6",
    "@radix-ui/react-popover": "^1.1.7",
    "@radix-ui/react-select": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.3",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-switch": "^1.1.4",
    "@radix-ui/react-tabs": "^1.1.4",
    "@tanstack/react-table": "^8.21.2",
    "better-auth": "^1.2.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.41.0",
    "lucide-react": "^0.487.0",
    "next": "15.2.4",
    "postgres": "^3.4.5",
    "react": "^19.0.0",
    "react-day-picker": "8.10.1",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.55.0",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.2.0",
    "tw-animate-css": "^1.2.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.2.5",
    "@biomejs/biome": "^1.9.4",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.30.6",
    "eslint": "^9",
    "eslint-config-biome": "^1.9.4",
    "eslint-config-next": "15.2.4",
    "eslint-plugin-drizzle": "^0.2.3",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "trustedDependencies": ["@biomejs/biome"]
}
